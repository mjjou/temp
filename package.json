    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/inversify": "^2.0.33",
    "@types/mongoose": "^5.11.97",
